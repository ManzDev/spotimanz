---
import BaseLayout from "@/layout/base.astro";
import Titlebar from "@/ui/Titlebar/index.astro";
import Sidebar from "@/ui/Sidebar/index.astro";
import Content from "@/ui/Content/index.astro";
import Player from "@/ui/Player/index.astro";
import CoverCard from "@/components/CoverCard.astro";

const title = "Music Manz Player - Manz.dev";
---

<CoverCard />

<style>
  .container {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 32px 1fr 100px;
    justify-content: center;
    background: var(--dark-bgcolor);
    padding: 1rem;
  }

  .player {
    background: var(--dark-bgcolor);
  }

  .content-container {
    display: grid;
    grid-template-columns: 300px 1fr;
  }

  .content {
    padding: 0;
    padding-left: 1rem;
  }
</style>

<BaseLayout title={title}>

  <div class="container">
    <div class="titlebar">
      <Titlebar />
    </div>
    <div class="content-container">
      <div class="sidebar">
        <Sidebar />
      </div>
      <div class="content">
        <Content />
      </div>
    </div>
    <div class="player">
      <Player />
    </div>
  </div>

</BaseLayout>
