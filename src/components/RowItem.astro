---
import { Icon } from "astro-icon/components";
const { icon, label } = Astro.props;
---

<style>
  .row {
    --text-color: var(--dark-textcolor);

    display: flex;
    padding: 0.75rem 1rem;
    gap: 0 1rem;
    color: var(--text-color);
    font-family: var(--default-font);
    font-weight: 500;
    font-size: 0.85rem;

    &:hover {
      --text-color: var(--light-textcolor);
      cursor: pointer;
    }

    & [data-icon] {
      font-size: 1.25rem;
    }
  }
</style>

<div class="row">
  <Icon name={icon} />
  <span>{label}</span>
</div>
