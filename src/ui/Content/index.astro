---
import { Icon } from "astro-icon/components";
import Playlist from "./Playlist.astro";
import ListHeader from "@/components/ListHeader.astro";
---

<style>
  .container {
    --dark-theme-color: color-mix(in srgb, var(--theme-color), #000 75%);

    display: grid;
    grid-template-rows: 400px 1fr;
    background: linear-gradient(to bottom, var(--theme-color), var(--dark-theme-color) 60%);
    border-radius: var(--border-radius);
    max-height: 82vh;

    overflow-y: scroll;

    &::before {
      content: "";
      display: block;
      position: absolute;
      background:
        linear-gradient(to right, transparent, #000 45%),
        linear-gradient(
          to bottom,
          var(--theme-color),
          var(--dark-theme-color) 60%
        ),
        var(--song-image, linear-gradient(transparent, transparent));
      width: 100%;
      height: 100%;
      opacity: 0.025;
      background-blend-mode: normal, color, color;
      pointer-events: none;
      background-size: contain;
      background-repeat: no-repeat;
      background-position: 20%;
      background-blend-mode: color;
      z-index: 0;
      transition: opacity 0.25s;
    }
  }

  .container::-webkit-scrollbar { width: 12px; }
  .container::-webkit-scrollbar-thumb { background: #fff3; border-radius: 0 15px 15px 0; }
  .container::-webkit-scrollbar-track { background: transparent; }
</style>

<div class="container">
  <ListHeader />
  <Playlist />
</div>
