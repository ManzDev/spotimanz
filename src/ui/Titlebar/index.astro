---
import { Icon } from "astro-icon/components";
---

<style>
  .container {
    display: flex;
    align-items: center;
    padding: 0 1rem;
    background: var(--dark-bgcolor);
    height: 100%;
    color: var(--light-textcolor);
  }

  .control-so {
    margin-left: auto;
    display: flex;
    gap: 1rem;
  }
</style>

<div class="container">
  <div class="dots">
    <Icon name="dots" />
  </div>

  <div class="control-so">
    <div class="button">
      <Icon name="minimize" />
    </div>
    <div class="button">
      <Icon name="maximize" />
    </div>
    <div class="button">
      <Icon name="close" />
    </div>
  </div>
</div>
