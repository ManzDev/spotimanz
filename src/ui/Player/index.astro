---
import SongVolume from "./SongVolume.astro";
import SongInfo from "./SongInfo.astro";
import SongPlayer from "./SongPlayer.astro";
---

<style>
  .container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-content: space-between;
    height: 100%;
    padding-right: 1.5rem;
  }
</style>

<style is:global>
  @media (width <= 1300px) {

    .player {
      --player-height: 200px;

      & div.container {
        grid-template-columns: 1fr;
        padding-right: 0.5rem;

        & .song-info-container { grid-row: 1 / 2; grid-column: 1 / 2; }
        & .song-player-container { grid-row: 2 / 3; grid-column: 1 / 3; }
        & .song-volume-container { grid-row: 1 / 2; grid-column: 2 / 3; }
      }
    }
  }

  @media (width <= 550px) {
    body div.player {
      --player-height: 250px;

      & div.container {
        gap: 1rem;

        & .song-info-container { grid-row: 1 / 2; grid-column: 1 / 3; justify-self: center; }
        & .song-volume-container { grid-row: 2 / 3; grid-column: 1 / 3; justify-self: center; margin-left: 0; }
        & .song-player-container { grid-row: 3 / 4; grid-column: 1 / 3; }
      }
    }
  }
</style>

<div class="container">
  <SongInfo />
  <SongPlayer />
  <SongVolume />
</div>
